<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:paddingLeft="4dp"
        android:paddingRight="12dp"
        android:elevation="6dp">

        <TextView
            android:id="@+id/tv_title_act_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/textGray"
            android:text="@string/str_air_temperature"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_nav_act_data_detail"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back_arrow_black"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_chart_act_data_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/mainTheme"
        android:orientation="vertical"
        android:elevation="4dp">
        <com.ntucap.itcm.views.IrisSwitchButton
            android:id="@+id/sw_dmy_act_data_detail"
            android:layout_width="220dp"
            android:layout_height="22dp"
            android:layout_margin="8dp"
            app:itemCount="3"/>
        <FrameLayout
            android:id="@+id/fl_container_act_data_detail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="18dp">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/daily_line_chart_act_data_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"/>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/monthly_bar_chart_act_data_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/yearly_pie_chart_act_data_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_data_act_data_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_number_act_data_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/shape_roundedrect_solid_theme_20dp"
            android:text="25 %"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:elevation="4dp"/>
        <TextView
            android:id="@+id/tv_title_act_data_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AVERAGE TEMPERATURE"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_lowest_act_data_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="The lowest temperature: xx"/>
        <TextView
            android:id="@+id/tv_highest_act_data_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="The highest temperature: xx"/>
    </LinearLayout>

</LinearLayout>